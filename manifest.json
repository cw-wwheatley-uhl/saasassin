{
    "name": "Test Extension",
    "manifest_version": 3,
    "version": "0.0.1",

    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "contextMenus",
        "clipboardWrite",
        "clipboard-read",
        "tabs",
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "icon2.png",
        "48": "icon2.png"
    }

}